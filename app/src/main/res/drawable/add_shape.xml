<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <item
            >
            <shape>
                <solid
                    android:color="#FFF" />
                <stroke
                    android:color="@color/lightGray"
                    android:width="1dp"/>
                <corners
                    android:radius="2dp"/>
            </shape>
        </item>
        <item
            android:drawable="@drawable/ic_add_black_24dp">

        </item>
    </layer-list>
    </item>
    <item android:state_pressed="true">
    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <item
            >
            <shape>
                <solid
                    android:color="#FFF" />
                <stroke
                    android:color="@color/darkGray"
                    android:width="1dp"/>
                <corners
                    android:radius="2dp"/>
            </shape>
        </item>
        <item
            android:drawable="@drawable/ic_add_darkgray_24dp">

        </item>
    </layer-list>
</item>

</selector>